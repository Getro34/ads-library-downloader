{
  "manifest_version": 3,
  "name": "Facebook Ads Library Downloader",
  "version": "1.0",
  "description": "Téléchargez facilement les publicités depuis la bibliothèque publicitaire Facebook",
  "permissions": [
    "storage",
    "downloads",
    "activeTab",
    "contextMenus"
  ],
  "host_permissions": [
    "https://*.facebook.com/*",
    "https://*.fbcdn.net/*",
    "https://*.xx.fbcdn.net/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.facebook.com/ads/library/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Facebook Ads Downloader"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}